{
	"compilerOptions": {
		"target": "ES2022",
		"module": "Node16",
		"moduleResolution": "Node16",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"@shared/*": ["packages/shared/src/*"]
		},
		"declaration": true,
		"sourceMap": true,
		"allowJs": true,
		"removeComments": true
	}
}
