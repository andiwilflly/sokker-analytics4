{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"composite": true,
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"noEmitOnError": true,
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"target": "ESNext",
		"lib": ["ES2022"],
		"types": ["node"],
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@shared/*": ["../../packages/shared/src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"],
	"references": [{ "path": "../../packages/shared" }]
}