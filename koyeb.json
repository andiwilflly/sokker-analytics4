{
  "build": {
    "steps": [
      {
        "name": "Install dependencies",
        "command": "npm install -g pnpm && pnpm install --no-frozen-lockfile"
      },
      {
        "name": "Build application",
        "command": "pnpm build"
      }
    ]
  },
  "run": {
    "command": "cd apps/server && pnpm start"
  }
} 